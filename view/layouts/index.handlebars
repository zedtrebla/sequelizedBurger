<h1>Burgers</h1>

<ul>
  {{#each burger}}
    {{#unless this.devour}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="" value="true">
          <button type="submit">Submit</button>
        </form>

        {{> burger/delete-burger}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burger}}
    {{#if this.devour}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="" value="false">
          <button type="submit">Submit</button>
        </form>

        {{> burger/delete-burger}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ba">Burger Name:</label>
    <input type="text" id="ba" name="name">
  </div>

  <div class="form-group">
    <label for="devou">Devoured</label><br>
    <input type="radio" name="" value="1" checked> Sleepy!<br>
    <input type="radio" name="" value="0"> Awake
  </div>

  <button type="submit">Add Burger</button>
</form>